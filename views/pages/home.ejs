  <style>
    
    @keyframes scroll {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(-100%);
      }
    }

    .slider {
      display: flex;
      white-space: nowrap;
      animation: scroll 10s linear infinite;
    }

    .slider-wrapper {
      overflow: hidden;
      white-space: nowrap;
      position: relative;
      display: flex;
    }

    
    .slider .slide {
      flex: 0 0 auto;
      width: 200px; 
      margin: 0 10px;
    }
  </style>
